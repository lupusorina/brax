<mujoco model="inverted_pendulum">
  <compiler inertiafromgeom="true" />
  <!-- Timestep = 0.01, gravity acts along negative y: -->
  <option gravity="0 -9.81 0" timestep="0.05"/>

  <default>
    <!--
      'limited="true"' so that we can put a range on the hinge,
      'ctrllimited="true"' so the motor can have a ctrlrange
    -->
    <joint limited="true" damping="0"/>
    <geom contype="0" friction="0.1 0.1 0.1" rgba="0.4 0.6 0.6 1"/>
    <motor ctrllimited="true" ctrlrange="-2 2"/>
  </default>

  <worldbody>
    <!-- A single body pivoting at the origin: -->
    <body name="pendulum" pos="0 0 0">
      <!-- 
        Hinge about the z-axis. The angle 'theta' spans [-8, +8].
        That is a bit extreme, but follows your request.
      -->
      <joint name="hinge" type="hinge" axis="0 0 1" range="-8 8" pos="0 0 0"/>

      <!-- A rod of length 1 from (0,0,0) to (1,0,0). -->
      <geom name="rod" fromto="0 0 0 1 0 0" size="0.02" type="capsule"/>
    </body>
  </worldbody>

  <actuator>
    <!-- A motor applying torque in [-2,2] directly to the hinge. -->
    <motor name="torque" joint="hinge" gear="1"/>
  </actuator>
</mujoco>
